@{
    Layout = "~/_SiteLayout.cshtml";
    Page.Title = "List";
}

@{
    var db = Database.Open("StarterSite");
    var insertCommand = "SELECT * FROM [Jobs]";
    var selectedData = db.Query(insertCommand);

    var table = new WebGrid(source: selectedData, rowsPerPage: 10);
}


<section class="result-table">
    <div class="result-table__container">
        <h1 class="result-table__title">All jobs</h1>

        @table.GetHtml(tableStyle: "result-table__grid grid",
         headerStyle: "grid__head",
         alternatingRowStyle: "alt",
         columns: table.Columns(
            table.Column(format: @<a href="~/EditJob?id=@item.ID">Edit</a>),
            table.Column("Title"),
            table.Column("SalaryAvarage"),
            table.Column("English"),
            table.Column("Category"),
            table.Column("Field"),
            table.Column("Education")
            )
        )
    </div>
</section>